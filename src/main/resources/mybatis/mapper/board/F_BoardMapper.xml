<?xml version="1.0" encoding="UTF-8"?>

<!-- Mapper파일을 구성하기 위한 Doctype 설정 -->
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.springboot.jdbc.FBoard_Service">
<select id="select" 
		parameterType="com.project.springboot.jdbc.FBoard_DTO"
		resultType="com.project.springboot.jdbc.FBoard_DTO"> 
		select * from F_Board
	</select>
	
	
	<insert id="insert" 
		parameterType="com.project.springboot.jdbc.FBoard_DTO"> 
		insert into F_Board (F_num, F_title, F_content, U_ID) values 
			(#{f_num}, #{f_title}, #{f_content}, #{u_id})
	</insert> 
	
	
	
	
	
	
	
	
	
	
	
	<select id="selectOne" 
		parameterType="com.project.springboot.jdbc.FBoard_DTO"
		resultType="com.project.springboot.jdbc.FBoard_DTO"> 
		select * from F_Board where f_num=#{f_num}
	</select>	 
	
	
	
	<!-- 회원 정보 수정. 파라미터는 DTO의 멤버변수를 사용한다. -->
	<update id="update" 
		parameterType="com.project.springboot.jdbc.FBoard_DTO"> 
		update member set f_title=#{f_title}, f_content=#{f_content}, u_id=#{u_id} 
		where f_num=#{f_num}
	</update> 
	
	
	
	
</mapper>  